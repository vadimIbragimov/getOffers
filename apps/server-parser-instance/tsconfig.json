{
  "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noUnusedParameters": true,
      "declaration": true,
      "esModuleInterop": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "./node_modules",
      "./**/*/*.d.ts"
  ]
}